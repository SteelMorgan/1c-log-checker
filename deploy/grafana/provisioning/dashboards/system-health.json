{
  "title": "1C System Health Overview",
  "uid": "1c-system-health",
  "version": 1,
  "schemaVersion": 38,
  "tags": ["1c", "health", "overview", "monitoring"],
  "timezone": "browser",
  "time": {
    "from": "now-24h",
    "to": "now"
  },
  "refresh": "1m",
  "panels": [
    {
      "id": 1,
      "title": "System Status",
      "type": "stat",
      "gridPos": {"h": 6, "w": 6, "x": 0, "y": 0},
      "targets": [
        {
          "datasource": {"type": "grafana-clickhouse-datasource", "uid": "clickhouse"},
          "refId": "A",
          "queryType": "sql",
          "rawSql": "WITH error_count AS (\n  SELECT count() AS errors\n  FROM logs.event_log\n  WHERE event_time >= now() - INTERVAL 1 HOUR\n    AND level = 'Error'\n),\nwarning_count AS (\n  SELECT count() AS warnings\n  FROM logs.event_log\n  WHERE event_time >= now() - INTERVAL 1 HOUR\n    AND level = 'Warning'\n)\nSELECT\n  CASE\n    WHEN e.errors = 0 THEN 'HEALTHY'\n    WHEN e.errors < 10 THEN 'WARNING'\n    ELSE 'CRITICAL'\n  END AS status\nFROM error_count e, warning_count w",
          "format": 1
        }
      ],
      "fieldConfig": {
        "defaults": {
          "mappings": [
            {
              "type": "value",
              "options": {
                "HEALTHY": {
                  "text": "‚úÖ HEALTHY",
                  "color": "green"
                },
                "WARNING": {
                  "text": "‚ö†Ô∏è WARNING",
                  "color": "yellow"
                },
                "CRITICAL": {
                  "text": "üî¥ CRITICAL",
                  "color": "red"
                }
              }
            }
          ]
        }
      },
      "options": {
        "colorMode": "background",
        "graphMode": "none",
        "textMode": "value"
      }
    },
    {
      "id": 2,
      "title": "Total Errors (Last 24h)",
      "type": "stat",
      "gridPos": {"h": 3, "w": 6, "x": 6, "y": 0},
      "targets": [
        {
          "datasource": {"type": "grafana-clickhouse-datasource", "uid": "clickhouse"},
          "refId": "A",
          "queryType": "sql",
          "rawSql": "SELECT\n  sum(error_count) AS total_errors\nFROM (\n  SELECT count() AS error_count\n  FROM logs.event_log\n  WHERE event_time >= now() - INTERVAL 24 HOUR\n    AND level = 'Error'\n  UNION ALL\n  SELECT count() AS error_count\n  FROM logs.tech_log\n  WHERE timestamp >= now() - INTERVAL 24 HOUR\n    AND name IN ('EXCP', 'ERR', 'EXCPTXT')\n)",
          "format": 1
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": 0, "color": "green"},
              {"value": 10, "color": "yellow"},
              {"value": 100, "color": "red"}
            ]
          }
        }
      },
      "options": {
        "graphMode": "area",
        "colorMode": "background"
      }
    },
    {
      "id": 3,
      "title": "Active Infobases",
      "type": "stat",
      "gridPos": {"h": 3, "w": 6, "x": 12, "y": 0},
      "targets": [
        {
          "datasource": {"type": "grafana-clickhouse-datasource", "uid": "clickhouse"},
          "refId": "A",
          "queryType": "sql",
          "rawSql": "SELECT\n  uniq(infobase_name) AS active_infobases\nFROM logs.event_log\nWHERE event_time >= now() - INTERVAL 1 HOUR\n  AND infobase_name != ''",
          "format": 1
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": {
            "mode": "palette-classic"
          }
        }
      },
      "options": {
        "graphMode": "area",
        "colorMode": "value"
      }
    },
    {
      "id": 4,
      "title": "Active Users (Last Hour)",
      "type": "stat",
      "gridPos": {"h": 3, "w": 6, "x": 18, "y": 0},
      "targets": [
        {
          "datasource": {"type": "grafana-clickhouse-datasource", "uid": "clickhouse"},
          "refId": "A",
          "queryType": "sql",
          "rawSql": "SELECT\n  uniq(user_name) AS active_users\nFROM logs.event_log\nWHERE event_time >= now() - INTERVAL 1 HOUR\n  AND user_name != ''",
          "format": 1
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": {
            "mode": "palette-classic"
          }
        }
      },
      "options": {
        "graphMode": "area",
        "colorMode": "value"
      }
    },
    {
      "id": 5,
      "title": "Warnings (Last 24h)",
      "type": "stat",
      "gridPos": {"h": 3, "w": 6, "x": 6, "y": 3},
      "targets": [
        {
          "datasource": {"type": "grafana-clickhouse-datasource", "uid": "clickhouse"},
          "refId": "A",
          "queryType": "sql",
          "rawSql": "SELECT count() AS warnings\nFROM logs.event_log\nWHERE event_time >= now() - INTERVAL 24 HOUR\n  AND level = 'Warning'",
          "format": 1
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": 0, "color": "green"},
              {"value": 50, "color": "yellow"},
              {"value": 200, "color": "orange"}
            ]
          }
        }
      },
      "options": {
        "graphMode": "area",
        "colorMode": "background"
      }
    },
    {
      "id": 6,
      "title": "Slow Queries (> 1s)",
      "type": "stat",
      "gridPos": {"h": 3, "w": 6, "x": 12, "y": 3},
      "targets": [
        {
          "datasource": {"type": "grafana-clickhouse-datasource", "uid": "clickhouse"},
          "refId": "A",
          "queryType": "sql",
          "rawSql": "SELECT count() AS slow_queries\nFROM logs.tech_log\nWHERE timestamp >= now() - INTERVAL 24 HOUR\n  AND name IN ('DBMSSQL', 'SDBL')\n  AND duration_microseconds > 1000000",
          "format": 1
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": 0, "color": "green"},
              {"value": 100, "color": "yellow"},
              {"value": 500, "color": "red"}
            ]
          }
        }
      },
      "options": {
        "graphMode": "area",
        "colorMode": "background"
      }
    },
    {
      "id": 7,
      "title": "Deadlocks",
      "type": "stat",
      "gridPos": {"h": 3, "w": 6, "x": 18, "y": 3},
      "targets": [
        {
          "datasource": {"type": "grafana-clickhouse-datasource", "uid": "clickhouse"},
          "refId": "A",
          "queryType": "sql",
          "rawSql": "SELECT count() AS deadlocks\nFROM logs.tech_log\nWHERE timestamp >= now() - INTERVAL 24 HOUR\n  AND name = 'TDEADLOCK'",
          "format": 1
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": 0, "color": "green"},
              {"value": 1, "color": "yellow"},
              {"value": 10, "color": "red"}
            ]
          }
        }
      },
      "options": {
        "graphMode": "area",
        "colorMode": "background"
      }
    },
    {
      "id": 8,
      "title": "Infobase Health Status",
      "type": "table",
      "gridPos": {"h": 10, "w": 24, "x": 0, "y": 6},
      "targets": [
        {
          "datasource": {"type": "grafana-clickhouse-datasource", "uid": "clickhouse"},
          "refId": "A",
          "queryType": "sql",
          "rawSql": "WITH error_stats AS (\n  SELECT\n    infobase_name,\n    countIf(level = 'Error' AND event_time >= now() - INTERVAL 1 HOUR) AS errors_1h,\n    countIf(level = 'Error' AND event_time >= now() - INTERVAL 24 HOUR) AS errors_24h,\n    countIf(level = 'Warning' AND event_time >= now() - INTERVAL 1 HOUR) AS warnings_1h,\n    max(event_time) AS last_activity\n  FROM logs.event_log\n  WHERE event_time >= now() - INTERVAL 24 HOUR\n    AND infobase_name != ''\n  GROUP BY infobase_name\n),\nsession_stats AS (\n  SELECT\n    infobase_name,\n    uniq(session_id) AS active_sessions\n  FROM logs.tech_log\n  WHERE timestamp >= now() - INTERVAL 5 MINUTE\n    AND infobase_name != ''\n    AND session_id != 0\n  GROUP BY infobase_name\n)\nSELECT\n  e.infobase_name AS \"–ò–Ω—Ñ–æ—Ä–º–∞—Ü–∏–æ–Ω–Ω–∞—è –±–∞–∑–∞\",\n  CASE\n    WHEN e.errors_1h = 0 THEN '‚úÖ Healthy'\n    WHEN e.errors_1h < 10 THEN '‚ö†Ô∏è Warning'\n    ELSE 'üî¥ Critical'\n  END AS \"–°—Ç–∞—Ç—É—Å\",\n  COALESCE(s.active_sessions, 0) AS \"–ê–∫—Ç–∏–≤–Ω—ã–µ —Å–µ—Å—Å–∏–∏\",\n  e.errors_1h AS \"–û—à–∏–±–∫–∏ (1 —á–∞—Å)\",\n  e.errors_24h AS \"–û—à–∏–±–∫–∏ (24 —á–∞—Å–∞)\",\n  e.warnings_1h AS \"–ü—Ä–µ–¥—É–ø—Ä–µ–∂–¥–µ–Ω–∏—è (1 —á–∞—Å)\",\n  formatDateTime(e.last_activity, '%Y-%m-%d %H:%M:%S') AS \"–ü–æ—Å–ª–µ–¥–Ω—è—è –∞–∫—Ç–∏–≤–Ω–æ—Å—Ç—å\"\nFROM error_stats e\nLEFT JOIN session_stats s ON e.infobase_name = s.infobase_name\nORDER BY e.errors_1h DESC",
          "format": 1
        }
      ],
      "options": {
        "showHeader": true,
        "sortBy": [
          {
            "desc": true,
            "displayName": "–û—à–∏–±–∫–∏ (1 —á–∞—Å)"
          }
        ]
      },
      "fieldConfig": {
        "overrides": [
          {
            "matcher": {"id": "byName", "options": "–°—Ç–∞—Ç—É—Å"},
            "properties": [
              {
                "id": "custom.width",
                "value": 120
              }
            ]
          }
        ]
      }
    },
    {
      "id": 9,
      "title": "System Health Timeline",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 24, "x": 0, "y": 16},
      "targets": [
        {
          "datasource": {"type": "grafana-clickhouse-datasource", "uid": "clickhouse"},
          "refId": "A",
          "queryType": "sql",
          "rawSql": "SELECT\n  toDateTime(intDiv(toUInt32(event_time), 300) * 300) AS time,\n  countIf(level = 'Error') AS \"Errors\",\n  countIf(level = 'Warning') AS \"Warnings\"\nFROM logs.event_log\nWHERE $__timeFilter(event_time)\nGROUP BY time\nORDER BY time",
          "format": 0
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "fillOpacity": 10
          },
          "color": {
            "mode": "palette-classic"
          }
        },
        "overrides": [
          {
            "matcher": {"id": "byName", "options": "Errors"},
            "properties": [
              {
                "id": "color",
                "value": {
                  "mode": "fixed",
                  "fixedColor": "red"
                }
              }
            ]
          },
          {
            "matcher": {"id": "byName", "options": "Warnings"},
            "properties": [
              {
                "id": "color",
                "value": {
                  "mode": "fixed",
                  "fixedColor": "yellow"
                }
              }
            ]
          }
        ]
      }
    },
    {
      "id": 10,
      "title": "Activity Heatmap (24 Hours)",
      "type": "heatmap",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 24},
      "targets": [
        {
          "datasource": {"type": "grafana-clickhouse-datasource", "uid": "clickhouse"},
          "refId": "A",
          "queryType": "sql",
          "rawSql": "SELECT\n  toDateTime(intDiv(toUInt32(event_time), 3600) * 3600) AS time,\n  infobase_name,\n  count() AS activity\nFROM logs.event_log\nWHERE event_time >= now() - INTERVAL 24 HOUR\n  AND infobase_name != ''\nGROUP BY time, infobase_name\nORDER BY time",
          "format": 0
        }
      ],
      "options": {
        "calculate": false,
        "cellGap": 2,
        "color": {
          "mode": "spectrum",
          "scheme": "Spectral"
        },
        "yAxis": {
          "axisPlacement": "left"
        }
      }
    },
    {
      "id": 11,
      "title": "Error Rate by Infobase",
      "type": "bargauge",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 24},
      "targets": [
        {
          "datasource": {"type": "grafana-clickhouse-datasource", "uid": "clickhouse"},
          "refId": "A",
          "queryType": "sql",
          "rawSql": "SELECT\n  infobase_name,\n  count() AS error_count\nFROM logs.event_log\nWHERE event_time >= now() - INTERVAL 24 HOUR\n  AND level = 'Error'\n  AND infobase_name != ''\nGROUP BY infobase_name\nORDER BY error_count DESC\nLIMIT 10",
          "format": 1
        }
      ],
      "options": {
        "orientation": "horizontal",
        "displayMode": "gradient",
        "showUnfilled": true
      },
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": 0, "color": "green"},
              {"value": 10, "color": "yellow"},
              {"value": 50, "color": "red"}
            ]
          }
        }
      }
    },
    {
      "id": 12,
      "title": "Recent Critical Events",
      "type": "table",
      "gridPos": {"h": 12, "w": 24, "x": 0, "y": 32},
      "targets": [
        {
          "datasource": {"type": "grafana-clickhouse-datasource", "uid": "clickhouse"},
          "refId": "A",
          "queryType": "sql",
          "rawSql": "SELECT\n  timestamp AS \"–î–∞—Ç–∞, –≤—Ä–µ–º—è\",\n  source AS \"–ò—Å—Ç–æ—á–Ω–∏–∫\",\n  infobase_name AS \"–ò–Ω—Ñ–æ—Ä–º–∞—Ü–∏–æ–Ω–Ω–∞—è –±–∞–∑–∞\",\n  severity AS \"–°–µ—Ä—å–µ–∑–Ω–æ—Å—Ç—å\",\n  event AS \"–°–æ–±—ã—Ç–∏–µ\",\n  description AS \"–û–ø–∏—Å–∞–Ω–∏–µ\"\nFROM (\n  -- Critical errors from Event Log\n  SELECT\n    event_time AS timestamp,\n    'Event Log' AS source,\n    infobase_name,\n    'Critical' AS severity,\n    event_presentation AS event,\n    comment AS description\n  FROM logs.event_log\n  WHERE event_time >= now() - INTERVAL 24 HOUR\n    AND level = 'Error'\n  \n  UNION ALL\n  \n  -- Exceptions from Tech Log\n  SELECT\n    timestamp,\n    'Tech Log' AS source,\n    infobase_name,\n    CASE\n      WHEN name = 'EXCP' THEN 'Critical'\n      WHEN name = 'ERR' THEN 'High'\n      ELSE 'Medium'\n    END AS severity,\n    name AS event,\n    error_description AS description\n  FROM logs.tech_log\n  WHERE timestamp >= now() - INTERVAL 24 HOUR\n    AND name IN ('EXCP', 'ERR', 'EXCPTXT')\n  \n  UNION ALL\n  \n  -- Deadlocks\n  SELECT\n    timestamp,\n    'Tech Log' AS source,\n    infobase_name,\n    'Critical' AS severity,\n    'DEADLOCK' AS event,\n    description\n  FROM logs.tech_log\n  WHERE timestamp >= now() - INTERVAL 24 HOUR\n    AND name = 'TDEADLOCK'\n)\nORDER BY timestamp DESC\nLIMIT 100",
          "format": 1
        }
      ],
      "options": {
        "showHeader": true,
        "sortBy": [
          {
            "desc": true,
            "displayName": "–î–∞—Ç–∞, –≤—Ä–µ–º—è"
          }
        ]
      },
      "fieldConfig": {
        "overrides": [
          {
            "matcher": {"id": "byName", "options": "–°–µ—Ä—å–µ–∑–Ω–æ—Å—Ç—å"},
            "properties": [
              {
                "id": "custom.width",
                "value": 120
              },
              {
                "id": "mappings",
                "value": [
                  {
                    "type": "value",
                    "options": {
                      "Critical": {
                        "text": "üî¥ Critical",
                        "color": "red"
                      },
                      "High": {
                        "text": "üü† High",
                        "color": "orange"
                      },
                      "Medium": {
                        "text": "üü° Medium",
                        "color": "yellow"
                      }
                    }
                  }
                ]
              }
            ]
          }
        ]
      }
    },
    {
      "id": 13,
      "title": "System Availability (Last 7 Days)",
      "type": "timeseries",
      "gridPos": {"h": 6, "w": 12, "x": 0, "y": 44},
      "targets": [
        {
          "datasource": {"type": "grafana-clickhouse-datasource", "uid": "clickhouse"},
          "refId": "A",
          "queryType": "sql",
          "rawSql": "WITH time_buckets AS (\n  SELECT\n    toDateTime(intDiv(toUInt32(event_time), 3600) * 3600) AS time_bucket\n  FROM logs.event_log\n  WHERE event_time >= now() - INTERVAL 7 DAY\n  GROUP BY time_bucket\n)\nSELECT\n  time_bucket AS time,\n  100 AS \"Uptime %\"\nFROM time_buckets\nORDER BY time",
          "format": 0
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "fillOpacity": 20
          },
          "color": {
            "mode": "fixed",
            "fixedColor": "green"
          },
          "unit": "percent",
          "min": 0,
          "max": 100
        }
      }
    },
    {
      "id": 14,
      "title": "Average Response Time (Last 7 Days)",
      "type": "timeseries",
      "gridPos": {"h": 6, "w": 12, "x": 12, "y": 44},
      "targets": [
        {
          "datasource": {"type": "grafana-clickhouse-datasource", "uid": "clickhouse"},
          "refId": "A",
          "queryType": "sql",
          "rawSql": "SELECT\n  toDateTime(intDiv(toUInt32(timestamp), 3600) * 3600) AS time,\n  avg(duration_microseconds) / 1000 AS \"Avg Response Time (ms)\"\nFROM logs.tech_log\nWHERE timestamp >= now() - INTERVAL 7 DAY\n  AND name IN ('SDBL', 'DBMSSQL')\n  AND duration_microseconds > 0\nGROUP BY time\nORDER BY time",
          "format": 0
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "fillOpacity": 10
          },
          "color": {
            "mode": "palette-classic"
          },
          "unit": "ms"
        }
      }
    }
  ]
}
