### ClickHouse Configuration ###
CLICKHOUSE_HOST=clickhouse
CLICKHOUSE_DB=logs
CLICKHOUSE_PORT=9000
# Период хранения
LOG_RETENTION_DAYS=30


### LOG PARSER Configuration ###

# Windows paths - separate multiple directories with semicolon (;)
LOG_DIRS=C:\Program Files\1cv8\srvinfo
# этот путь будет всегда указан как путь сохранения логов тех.журнала
TECHLOG_DIRS=D:\My Projects\FrameWork 1C\1c-log-checker\tech_logs
# этот путь подсказывает системе где лежит файл конфига ТЖ. Должен совпадать с переопределнным в conf.ini, не быть системным
TECHLOG_CONFIG_DIR=D:\My Projects\FrameWork 1C\1c-log-checker\configs\techlog

# MAX_WORKERS: Maximum parallel workers (default: 4)
MAX_WORKERS=4
# BATCH_SIZE: Number of records to batch before inserting to ClickHouse (default: 5000)
BATCH_SIZE=5000
# BATCH_FLUSH_TIMEOUT: Maximum milliseconds to wait before flushing batch (default: 1000)
BATCH_FLUSH_TIMEOUT=1000
#Строка лога хешируется по ключевым значениям, при записи новых строк выполняется поиск по хешу (что бы не писать дубли строк. Замедляет запись в ~2 раза)
ENABLE_DEDUPLICATION=FALSE
#Настрока воркера, который сам формирует таблицу со статистикой ошибок за последний период
NEW_ERRORS_UPDATE_INTERVAL=10
#Период за который формируется таблица ошибок
NEW_ERRORS_HOURS = 48

# OpenTelemetry (optional) - Enable distributed tracing
TRACING_ENABLED=false
# Parser Modes - When true, parser reads logs but does not write to ClickHouse
READ_ONLY=false
# Logging (levels: debug, info, warn, error - единая настройка для MCP-сервера и парсера)
LOG_LEVEL=error
# DEBUG_SAVE_ALL_RECORDS: Save all parsed records to JSONL file (default: false)
# When true, saves to /logs/parser_all_records.jsonl for debugging/verification
DEBUG_SAVE_ALL_RECORDS=false


### MCP Server Configuration ###
MCP_PORT=8080


# Grafana Configuration
GRAFANA_PASSWORD=admin







